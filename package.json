{
  "name": "bitcoin-jobs",
  "version": "0.1.0",
  "description": "Decentralized Job Marketplace on Bitcoin SV by The Bitcoin Corporation LTD",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3010",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "kill:3000": "lsof -ti:3000 | xargs kill -9",
    "kill:dev": "lsof -ti:3000 | xargs kill -9 && lsof -ti:3001 | xargs kill -9",
    "kill:all": "for port in {3000..3010}; do lsof -ti:$port | xargs kill -9 2>/dev/null || true; done"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "blockchain",
    "jobs",
    "decentralized",
    "micropayments",
    "the-bitcoin-corporation"
  ],
